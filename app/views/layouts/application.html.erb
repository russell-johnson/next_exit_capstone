<!DOCTYPE html>

<html>
<head>
  <title>Next Exit</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
  <title>Google Maps JavaScript API Search Along a Route Example</title>
  <!-- <script src="http://maps.googleapis.com/maps/api/js?sensor=false"></script> -->
  <script src="https://maps.googleapis.com/maps/api/js?v=3.11" type="text/javascript"></script>
</head>
<body>
 <nav>
    <div class="nav-wrapper z-depth-2">
      <a href="/" class="brand-logo center green-text text-darken-2">Next Exit</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons green-text">menu</i></a>
      <ul  class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'green-text text-darken-2' %></li>
          <li><%= link_to 'My Trips', road_trips_my_trips_path, class: 'green-text text-darken-2' %></li>

        <% else %>
          <li><%= link_to 'Sign Up', new_user_registration_path, class: 'green-text text-darken-2' %></li>
          <li><%= link_to 'Login', user_session_path, class: 'green-text text-darken-2' %></li>
        <% end %>
      </ul>
      <ul class="side-nav" id="mobile-demo">
        <% if user_signed_in? %>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
          <a class="green-text text-darken-2" href="/about_us/index">About Us</a><%= link_to 'Careers at NextExit', about_us_contact_us_path%><%= link_to 'Contact Us', about_us_contact_us_path%></a>

        <% else %>
          <li><%= link_to 'Sign Up', new_user_registration_path, class: 'green-text text-darken-2' %></li>
          <li><%= link_to 'Login', user_session_path, class: 'green-text text-darken-2' %></li>
          <a class="green-text text-darken-2" href="/about_us/index">About Us</a><%= link_to 'Careers at NextExit', about_us_contact_us_path%><%= link_to 'Contact Us', about_us_contact_us_path%></a>

        <% end %>
      </ul>
    </div>
  </nav>
  <!-- <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p> -->
  <main>
    <%= yield %>
  </main>


  <footer id="footer" class="page-footer">
    <div class="container">
      <div class="row">
        <div class='center'>
          <div class="col s12">
            <p class="green-text text-darken-2">We appreciate all the help we have received from <a href="http://www.devpointlabs.com/" target="_blank">DevPoint Labs!</a></p>
              <a class="green-text text-darken-2" href="/about_us/index">About Us</a> / <a class="grey-text text-lighten-3"><%= link_to 'Careers at NextExit', about_us_contact_us_path%></a> / <a class="grey-text text-lighten-3"><%= link_to 'Contact Us', about_us_contact_us_path%></a>
          </div>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
